/* Ingredient Show Section
–––––––––––––––––––––––––––––––––––––––––––––––––– */
#ingredient-show  {
    background: #161615;
    color: #fff;
    padding-bottom: 10px;
}

#ingredient-show  ul {
    color: #fff;
}

#ingredient-show  .ingredient-name {
}

.ingredient-show-buttons {
    left: 0;
    bottom: 0;
}

#ingredient .ingredient-name{
    color: #000;
}

.ingredient-header {
    background: linear-gradient(#161615, transparent), url("<%= asset_path('spice-header.jpg') %>") no-repeat;
    -webkit-background-size: cover;
    background-size: cover;
    padding: 50px 0;
    text-align: center;
}

#virtual-pantry {
    background: linear-gradient(#161615, transparent), url("<%= asset_path('pantry.jpg') %>") no-repeat;
    padding: 50px 0;
    color: #fff;
    -webkit-background-size: cover;
    background-size: cover;
}