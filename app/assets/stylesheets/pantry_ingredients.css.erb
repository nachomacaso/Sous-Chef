/* Ingredient Show Section
–––––––––––––––––––––––––––––––––––––––––––––––––– */
#ingredient-show  {
    background: #161615;
    color: #fff;
    padding-bottom: 10px;
}

#ingredient-show  ul {
    color: #fff;
}

#ingredient-show  .ingredient-name {
}

.ingredient-show-buttons {
    left: 0;
    bottom: 0;
}

#ingredient .ingredient-name{
    color: #000;
}

.ingredient-header {
    background-image: image-url(<%= asset_path 'spice-header.jpg' %>);
    -webkit-background-size: cover;
    background-size: cover;
    padding: 50px 0;
    text-align: center;
}

#virtual-pantry {
    background-image: linear-gradient(#161615, transparent), url(/assets/pantry-52e49737e5e433827e2594ca0f1aff616b2ac80cfb91d01a90b17eae99994ad7.jpg);
    padding: 50px 0;
    color: #fff;
    -webkit-background-size: cover;
    background-size: cover;
}