<section id="ingredient" class="clearfix ingredient">
  <div class="ingredient-header">
    <div class="container">
      <div class="col-sm-6 f-n center-block">
        <h2>Edit Ingredient</h2>
      </div>
    </div>
  </div>

  <div class="container ingredient-container">
    <div class="row">
      <div class="col-md-5 ingredient-form">
        <h2 class="ingredient-name"><%= @pantry_ingredient.ingredient.name %></h2>
        <%= form_tag "/pantry/#{@pantry_ingredient.id}", class:"form-custom", method: :patch do %>
          <div class="form-group">
            <label class="sr-only" for="amount">Amount</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-space-shuttle" aria-hidden="true"></i></div>
              <%= text_field_tag :amount, nil ,placeholder: "Amount", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="sr-only" for="unit">unit</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-rebel" aria-hidden="true"></i></div>
              <%= collection_select :measurement, :measurement_id, Measurement.all, :id, :unit, { prompt: "Select Unit Type ..." }, { class: "form-control" } %>
            </div>
          </div>

          <%= submit_tag 'Save Changes', class: "btn btn-block btn-primary" %>
        <% end %>
      </div> <!-- ingredient form ends -->
      
      <hr class="visible-sm">
    </div>
  </div>
</section> <!-- ingredient section ends -->