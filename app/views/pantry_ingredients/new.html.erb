<h1>Add Ingredient To Pantry</h1>

<%= form_tag '/pantry', method: :post do %>
  <div>
    <%= label_tag :name, 'Name: ' %>
    <%= text_field_tag :name, nil %>
  </div>
  <div>
    <%= label_tag :measurement, 'Measurement: ' %>
    <%= text_field_tag :measurement, nil %>
  </div>
  <%= submit_tag 'Add To Pantry' %>
<% end %>