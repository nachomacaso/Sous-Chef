<!-- Reservation section starts -->
<section id="reservation" class="clearfix reservation">
  <div class="reserve-header">
    <div class="container">
      <div class="col-sm-6 f-n center-block">
        <h2>Add New Ingredient</h2>
      </div>
    </div>
  </div>

  <div class="container reservation-container">
    <div class="row">
    <!-- Reservation form starts -->
      <div class="col-md-5 reservation-form">
        <%= form_tag '/pantry', class:"form-custom", method: :post do %>
          <div class="form-group">
            <label class="sr-only" for="name">Ingredient</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-hand-spock-o" aria-hidden="true"></i></div>
              <%= text_field_tag :name, nil ,placeholder: "Ingredient", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="sr-only" for="amount">Amount</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-space-shuttle" aria-hidden="true"></i></div>
              <%= text_field_tag :amount, nil ,placeholder: "Amount", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="sr-only" for="unit">unit</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-rebel" aria-hidden="true"></i></div>
              <%= collection_select :measurement, :measurement_id, Measurement.all, :id, :unit, { prompt: "Select Unit Type ..." }, { class: "form-control" } %>
            </div>
          </div>

          <div class="form-group">
            <label class="sr-only" for="category">Category</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-empire" aria-hidden="true"></i></div>
              <%= collection_select :category, :category_id, Category.all, :id, :aisle, { prompt: "Select Category ..." }, { class: "form-control" } %>
            </div>
          </div>

          <%= form_for @pantry_ingredient, class:"form-custom", html: { multipart: true } do |form| %>
            <div class="form-group">
              <label class="sr-only" for="name">Upload Barcode</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-picture-o" aria-hidden="true"></i></div>
              <%= form.file_field :image %>
            </div>
          <% end %>
          <br>

          <%= submit_tag 'Add To Pantry', class: "btn btn-block btn-primary" %>
        <% end %>
      </div> <!-- Reservation form ends -->
      <hr class="visible-sm">
    </div>
  </div>
</section> <!-- Reservation section ends -->