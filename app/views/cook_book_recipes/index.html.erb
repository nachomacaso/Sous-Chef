<!-- Cook Book section starts -->
<section id="cookbook">
  <h2>Cook Book</h2>
  <div class="container">
    <div class="row">
    <!-- Iterate thru cook book recipes -->
      <% @cook_book_recipes.each do |cook_book_recipe| %>
        <div class="col-sm-4 col-md-4">
          <div class="user_recipes">
            <div class="user_recipes-img-content">
              <a href="/recipes/<%= cook_book_recipe.recipe.spoonacular_id %>"><img src="<%= cook_book_recipe.recipe.image %>" class="img-responsive" alt="user_recipes-thumb"></a>
            </div>
            <div class="content">
              <h4><a href="/recipes/<%= cook_book_recipe.recipe.spoonacular_id %>"><%= cook_book_recipe.recipe.name %></a></h4>
              <small class="text-muted date"><%= cook_book_recipe.created_at.strftime("Added on %B %e,%Y") %></small>
              <div><p>Rating:
                <% cook_book_recipe.rating.times do %>
                  <i class="fa fa-star" aria-hidden="true"></i>
                <% end %>
              </p></div>
            </div>
          </div>
        </div>
      <% end %>        
    </div>
  </div>
</section> <!-- Cook book section ends -->